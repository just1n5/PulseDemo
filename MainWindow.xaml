<Window x:Class="PulseLogin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PulseLogin"
        xmlns:viewmodels="clr-namespace:PulseLogin.ViewModels"
        mc:Ignorable="d"
        Title="Pulse Login"
        Width="360"
        Height="580"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.DataContext>
        <viewmodels:LoginViewModel/>
    </Window.DataContext>

    <Border CornerRadius="8"
            BorderThickness="2"
            BorderBrush="Black">
        <Grid Background="{StaticResource BackgroundBrush}">
            <!-- Header Bar -->
            <Grid Height="50"
                  VerticalAlignment="Top">
                <Rectangle Fill="{StaticResource BackgroundBrush}"
                           Height="50"
                           />

                <!-- Logo y texto -->
                <Viewbox Width="32"
                         Height="32"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Margin="10,9,0,0">
                    <Canvas Width="83"
                            Height="81">
                        <!-- Círculo central -->
                        <Ellipse Canvas.Left="37.63157"
                                 Canvas.Top="36.65567"
                                 Width="6.83226"
                                 Height="6.83226"
                                 Fill="#798AA8"/>

                        <!-- Círculos concéntricos -->
                        <Path Stroke="#798AA8"
                              StrokeThickness="4.33794"
                              Data="M79.9266 39.0957C79.9266 59.9253 62.7794 78.1373 41.8612 78.1373C20.7169 78.1373 2.16897 61.3301 2.16897 40.7224C2.16897 19.957 19.6872 2.16897 40.6682 2.16897C61.8188 2.16897 79.9266 18.494 79.9266 39.0957Z"
                              Fill="Transparent"/>

                        <Path Stroke="#798AA8"
                              StrokeThickness="3.7957"
                              Data="M54.7333 9.02349C63.206 10.7804 70.308 15.7409 74.0532 24.3865C76.1854 30.6743 76.4175 37.2798 74.0337 43.8811C71.6438 50.4994 66.5678 57.2674 57.821 63.7508C49.495 68.4035 40.009 70.9904 31.3794 70.2286C22.8162 69.4727 15.0512 65.4288 9.88794 56.6528C6.52245 49.4946 6.03104 41.5861 8.74076 34.0154C11.4559 26.4295 17.4346 19.0541 27.2249 13.1189C36.2994 8.74457 46.2113 7.25634 54.7333 9.02349Z"
                              Fill="Transparent"/>

                        <Path Stroke="#798AA8"
                              StrokeThickness="3.7957"
                              Data="M52.3517 14.4779C61.121 14.4735 68.5107 17.3962 71.6481 23.9704C74.178 34.2046 70.2212 46.301 53.6217 57.49C48.0501 61.2455 39.0122 64.0816 30.4442 64.1733C21.8724 64.2651 14.4363 61.6363 11.0278 55.2945C9.02088 49.9721 9.82036 44.0672 12.8526 38.2129C15.9098 32.3105 21.1829 26.5886 27.8005 21.8956C34.042 17.4693 43.5611 14.4823 52.3517 14.4779Z"
                              Fill="Transparent"/>

                        <Path Stroke="#798AA8"
                              StrokeThickness="3.7957"
                              Data="M51.2452 21.2762C58.8607 20.1524 65.5059 21.2719 68.7796 26.0462C69.0603 26.7013 69.1499 27.9556 68.6291 29.8919C68.1026 31.849 67.0267 34.2141 65.395 36.7522C62.1348 41.8233 56.7919 47.3729 49.7375 51.5068C43.6566 55.0702 35.6819 57.4625 28.5533 57.8444C21.4126 58.2269 15.8616 56.5797 13.3915 53.0264C12.9264 51.3293 13.2191 49.3085 14.252 46.9919C15.3293 44.5756 17.1276 42.0354 19.2889 39.568C23.6096 34.6353 29.1139 30.2936 32.2337 28.2C36.11 25.5989 43.7036 22.3891 51.2452 21.2762Z"
                              Fill="Transparent"/>
                    </Canvas>
                </Viewbox>

                <TextBlock Text="PULSE"
                           Style="{StaticResource TextBlockBase}"
                           Foreground="White"
                           FontSize="12"
                           TextDecorations="Underline"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Margin="45,15,0,0"
                           Width="50"
                           Height="12"/>

                <TextBlock Text="POWERED BY CLOUTION"
                           Style="{StaticResource TextBlockBase}"
                           Foreground="White"
                           FontSize="6"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Margin="45,30,0,0"/>

                <!-- Botones de control de ventana -->
                <Border Width="24"
                        Height="24"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="284,0,0,0"
                        MouseDown="MinimizeButton_Click"
                        Cursor="Hand">
                    <Path Stroke="White"
                          StrokeThickness="2"
                          Data="M4,12 L20,12"
                          VerticalAlignment="Top"
                          HorizontalAlignment="Left"
                          Margin="0,1,0,0"/>
                </Border>

                <Border Width="24"
                        Height="24"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="320,13,0,0"
                        MouseDown="CloseButton_Click"
                        Cursor="Hand">
                    <Grid>
                        <Path Stroke="White"
                              StrokeThickness="2"
                              Data="M4,4 L20,20"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"/>
                        <Path Stroke="White"
                              StrokeThickness="2"
                              Data="M20,4 L4,20"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Campos de entrada -->
            <Grid Margin="40,180,0,0"
                  Width="280"
                  Height="40"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top">

                <Border Background="{StaticResource FieldBackgroundBrush}"
                        CornerRadius="8"
                        Margin="10,0,0,0"
                        Height="40">
                    <TextBox BorderThickness="0"
                             Background="Transparent"
                             FontFamily="{StaticResource InterFont}"
                             FontSize="18"
                             FontWeight="Medium"
                             Foreground="#313946"
                             VerticalAlignment="Center"
                             Padding="10,0,0,0"
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderThickness="0">
                                                <Grid>
                                                    <TextBlock Text="USUARIO"
                                                               Foreground="{StaticResource TextLightBrush}"
                                                               FontSize="18"
                                                               FontWeight="Medium"
                                                               FontFamily="{StaticResource InterFont}"
                                                               Margin="10,0,0,0"
                                                               VerticalAlignment="Center"
                                                               Visibility="{Binding Text.IsEmpty, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                    <ScrollViewer x:Name="PART_ContentHost"
                                                                  Margin="10,0,0,0"
                                                                  VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </Border>
            </Grid>

            <Grid Margin="40,240,0,0"
                  Width="280"
                  Height="40"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top">

                <Border Background="{StaticResource FieldBackgroundBrush}"
                        CornerRadius="8"
                        Margin="10,0,0,0"
                        Height="40">
                    <PasswordBox BorderThickness="0"
                                 Background="Transparent"
                                 FontFamily="{StaticResource InterFont}"
                                 FontSize="18"
                                 FontWeight="Medium"
                                 VerticalAlignment="Center"
                                 Padding="10,0,0,0"
                                 x:Name="PasswordBox">
                        <PasswordBox.Style>
                            <Style TargetType="PasswordBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="PasswordBox">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderThickness="0">
                                                <Grid>
                                                    <TextBlock Text="CONTRASEÑA"
                                                               Foreground="{StaticResource TextLightBrush}"
                                                               FontSize="18"
                                                               FontWeight="Medium"
                                                               FontFamily="{StaticResource InterFont}"
                                                               Margin="10,0,0,0"
                                                               VerticalAlignment="Center"
                                                               Visibility="{Binding Password.Length, ElementName=PasswordBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                    <ScrollViewer x:Name="PART_ContentHost"
                                                                  Margin="10,0,0,0"
                                                                  VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </PasswordBox.Style>
                    </PasswordBox>
                </Border>
            </Grid>

            <!-- Botón de inicio de sesión -->
            <Button Style="{StaticResource LoginButtonStyle}"
                    Margin="70,330,0,0"
                    Width="220"
                    Height="50"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Command="{Binding LoginCommand}">
                <TextBlock Text="INICIAR SESION"
                           Style="{StaticResource TextBlockBase}"
                           FontSize="18"/>
            </Button>

            <!-- Enlace de recuperación de contraseña -->
            <TextBlock Text="NO RECUERDO MI CONTRASEÑA"
                       Style="{StaticResource TextBlockBase}"
                       FontSize="14"
                       Foreground="{StaticResource AccentBrush}"
                       TextDecorations="Underline"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Margin="70,420,0,0"
                       Width="220"
                       Height="25"
                       TextAlignment="Center"
                       MouseDown="ForgotPassword_Click"
                       Cursor="Hand"/>
        </Grid>
    </Border>
</Window>